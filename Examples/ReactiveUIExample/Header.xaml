<UserControl x:Class="ReactiveUIExample.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReactiveUIExample"
             mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Right" Command="{Binding Add}">Add</Button>
        <Button DockPanel.Dock="Left" Command="{Binding OnAll}">On all</Button>
        <TextBox DockPanel.Dock="Left" Text="{Binding Text}"/>
    </DockPanel>
</UserControl>
