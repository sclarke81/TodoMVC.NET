<Window
    x:Class="TodoMvc.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TodoMvc.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:Header Grid.Row="0" />
        <local:Main Grid.Row="1" Visibility="{Binding MainAndFooterAreVisible, Converter={local:BoolToVisibilityConverter}}" />
        <local:Footer Grid.Row="2" Visibility="{Binding MainAndFooterAreVisible, Converter={local:BoolToVisibilityConverter}}" />
    </Grid>
</Window>
